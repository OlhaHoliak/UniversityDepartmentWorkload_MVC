@model Data.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h1 style="color: crimson">Видалення предмету</h1>

<h3>Ви впевнені, що хочете видалити?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
    </dl>

    <div class="alert-danger">
        @ViewBag.ExeptionMessage
    </div>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SubjectName" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <hr />
        <a asp-action="Index">Список предметів</a>
    </div>
</div>
